<script>
    function  close_computer(){
        // Do something
        Swal.fire({
            title: 'ยืนยันการปิดระบบ',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'ยืนยัน',
            cancelButtonText: 'ยกเลิก'
          }).then((result) => {
            if (result.isConfirmed) {
                axios.delete(`/system?mode=shutdown`)
                    .then(response => {
                    if (response.data == 'OK') {
                        alert_fire('Shutdown')
                    }
                    })
                    .catch(error => {
                    alert_error('Error')
                });
            }
        })

        
    }
    function  restart_computer(){
        // Do something
        Swal.fire({
            title: 'ยืนยันการ Restart ระบบ',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'ยืนยัน',
            cancelButtonText: 'ยกเลิก'
          }).then((result) => {
            if (result.isConfirmed) {
                axios.delete(`/system?mode=restart`)
                    .then(response => {
                    if (response.data == 'OK') {
                        alert_fire('Restart')
                    }
                    })
                    .catch(error => {
                    alert_error('Error')
                });
            }
        })

        
    }
</script>